shadow()
  box-shadow 0 2px 16px rgba(57,63,72,0.2)


shadow-hover()
  box-shadow 0 6px 16px rgba(57,63,72,0.2)


sidebar-width = 200px

$gap = 32px
// 960, 1152, and 1344 have been chosen because they are divisible by both 12 and 16
$tablet = 769px
// 960px container + 4rem
$desktop =  960px + (2 * $gap)
// 1152px container + 4rem
$widescreen = 1152px + (2 * $gap)
// 1344px container + 4rem
$fullhd = 1344px + (2 * $gap)

media_queries = {
  mobile  : "only screen and (max-width: %s)" % $tablet,
  tablet  : "only screen and (min-width: %s) and (max-width: %s)" % ($tablet $desktop),
  desktop : "only screen and (min-width: %s) and (max-width: %s)" % ($desktop $widescreen),
  widescreen: "only screen and (min-width: %s) and (max-width: %s)" % ($widescreen $fullhd),
  fullhd:  "only screen and (min-width: %s)" % ($fullhd)
}

mq(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}
